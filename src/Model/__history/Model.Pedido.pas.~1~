unit Model.Pedido;

interface

uses
  SimpleAttributes;

type
  [Tabela('PEDIDO')]
  TProduto = class
    private
    Fid: integer;
    FDesconto: double;
    FTotal: double;
    public
      [Campo('ID'), Pk, AutoInc]
      property id: integer read Fid write Fid;
      [Campo('DESCONTO')]
      property Desconto: double read FDesconto write FDesconto;
      [Campo('TOTAL')]
      property total: double read Ftotal write Ftotal;
  end;

implementation

end.

