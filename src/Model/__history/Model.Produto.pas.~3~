unit Model.Produto;

interface

uses
  SimpleAttributes;

type
  [Tabela('produto')]
  TProduto = class
    private
    Fid: integer;
    Fdescricao: string;
    Fpreco: double;
    public
      [Campo('ID'), Pk, AutoInc]
      property id: integer read Fid write Fid;
      [Campo('DESCRICAO')]
      property descricao: string read Fdescricao write Fdescricao;
      [Campo('PRECO'), Format('#.##0,00')]
      property preco: double read Fpreco write Fpreco;
  end;

implementation

end.
